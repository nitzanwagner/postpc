<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/tap_on_me"
              android:gravity="center_horizontal"
              android:id="@+id/tap_on_me"
              android:textSize="24sp" android:layout_marginTop="8dp"
              android:textColor="@color/DarkBlue"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintVertical_bias="0.71"/>
    <Button
            android:id="@+id/go_fish_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/go_fish"
            android:textColor="@color/DarkBlue"
            android:background="@drawable/button_border"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="15dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.445"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/numbers_entered"
              android:gravity="center_horizontal"
              android:id="@+id/digits_entered_text"
              android:textSize="24sp" android:layout_marginTop="8dp"
              android:textColor="@color/DarkBlue"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintVertical_bias="0.809"/>

</android.support.constraint.ConstraintLayout>